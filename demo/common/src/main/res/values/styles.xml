<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

  <style name="CommonAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/common_purple_500</item>
    <item name="colorPrimaryVariant">@color/common_purple_700</item>
    <item name="colorOnPrimary">@color/common_white</item>
    <item name="android:windowBackground">@color/common_white</item>
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
  </style>

  <style name="CommonDialogTheme" parent="Theme.AppCompat.Dialog">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

  <style name="CommonDialogBottomAnim" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/common_popup_enter</item>
    <item name="android:windowExitAnimation">@anim/common_popup_exit</item>
  </style>

  <!--去掉点击后的水波纹效果-->
  <style name="CommonNoClickEffect" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:selectableItemBackground">@null</item>
    <item name="android:selectableItemBackgroundBorderless">@null</item>
  </style>

  <!--编辑框下划线的颜色-->
  <style name="CommonEditTextUnderlineStyle">
    <item name="android:colorControlNormal">@android:color/darker_gray</item>
    <item name="android:colorControlActivated">@android:color/holo_red_light</item>
  </style>

  <!--取消 tabLayout 文字全大写-->
  <style name="CommonTabTextDisableAllCapsStyle" parent="TextAppearance.Design.Tab">
    <item name="textAllCaps">false</item>
  </style>

</resources>
