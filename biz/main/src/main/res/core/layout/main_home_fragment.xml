<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <variable
      name="vm"
      type="io.goooler.demoapp.main.vm.MainHomeViewModel" />

    <variable
      name="listener"
      type="android.view.View.OnClickListener" />
  </data>

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_teal_800"
        android:gravity="center"
        android:minHeight="40dp"
        android:onClick="@{listener}"
        android:text="@{vm.title}"
        android:textColor="@color/common_white" />

      <Button
        android:id="@+id/bt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="WebActivity"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Map"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Empty"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Countdown"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Custom View"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Fullscreen Dialog"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Audio Player"
        android:textAllCaps="false" />

      <Button
        android:id="@+id/bt_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{listener}"
        android:text="Create shortcut"
        android:textAllCaps="false" />

      <Button
          android:id="@+id/bt_9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:onClick="@{listener}"
          android:text="Show floating window"
          android:textAllCaps="false" />

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</layout>
