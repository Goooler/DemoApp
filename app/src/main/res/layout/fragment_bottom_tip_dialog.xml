<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <data>

        <variable
            name="vm"
            type="io.goooler.demoapp.widget.vm.BottomTipDialogViewModel" />

        <variable
            name="listener"
            type="io.goooler.demoapp.widget.ui.BottomTipDialogFragment.EventListener" />
    </data>

    <LinearLayout
        binding_bg_solidColor="@{@color/white}"
        binding_bg_topLeftRadius="@{9}"
        binding_bg_topRightRadius="@{9}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        tools:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{vm.title}"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="这是一个示例标题" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="12dp"
                android:onClick="@{()->listener.onCloseClick()}"
                android:src="@drawable/common_ic_close_dialog"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="12dp"
            android:text="@{vm.content}"
            android:textColor="@color/black"
            tools:text="这是一段示例内容" />
    </LinearLayout>
</layout>